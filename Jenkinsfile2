pipeline {
    agent any
    environment {
        tenant_id     = credentials('tenant_id')
        client_id = credentials('client_id')
        client_secret = credentials('client_secret')
    }
    stages {
        stage('Creating Azure user') {
            steps {
                sh 'python3 microsoft_entra_id/user/create_user.py'
            }
        }
    }
}